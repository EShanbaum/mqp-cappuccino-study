{
    "$schema": "https://raw.githubusercontent.com/revisit-studies/study/main/src/parser/StudyConfigSchema.json",
    "studyMetadata": {
        "title": "B0DStimuli",
        "version": "pilot",
        "authors": [
            "Hien Hoang"
        ],
        "date": "2025-09-17",
        "description": "A simple study",
        "organizations": [
            "University of Utah",
            "WPI",
            "University of Toronto"
        ]
    },
    "uiConfig": {
        "contactEmail": "contact@revisit.dev",
        "helpTextPath": "B0D-Stimuli/assets/help.md",
        "logoPath": "revisitAssets/revisitLogoSquare.svg",
        "withProgressBar": true,
        "autoDownloadStudy": false,
        "sidebar": true
    },
    "components": {
        "introduction": {
            "type": "markdown",
            "path": "B0D-Stimuli/assets/introduction.md",
            "response": []
        },
        "first-question-set": {
            "type": "questionnaire",
            "response": [
                {
                    "id": "q1-name",
                    "prompt": "What is your first name?",
                    "required": true,
                    "location": "aboveStimulus",
                    "type": "longText",
                    "placeholder": "Please enter your first name"
                },
                {
                    "id": "q2-color",
                    "prompt": "What is your favorite color?",
                    "required": true,
                    "location": "aboveStimulus",
                    "type": "dropdown",
                    "placeholder": "Please choose your favorite color",
                    "options": ["Red", "Blue", "My favorite color is not shown here."]
                }
            ]
        },
        "message-obscured-stimulus": {
            "type": "image",
            "path": "B0D-Stimuli/assets/obscured.png",
            "instruction": "What might the gender of the chart maker be?",
            "style": {
                "width": "800px"
            },
            "nextButtonLocation": "sidebar",
            "response": [
                {
                    "id": "assets-response/1",
                    "prompt": "Answer:",
                    "location": "sidebar",
                    "type": "radio",
                    "options": [
                        "Yes",
                        "No"
                    ]
                }
            ]
        },
        "message-unobscured-stimulus": {
            "type": "image",
            "path": "B0D-Stimuli/assets/unobscured.png",
            "instruction": "What might the gender of the chart maker be?",
            "style": {
                "width": "800px"
            },
            "nextButtonLocation": "sidebar",
            "response": [
                {
                    "id": "assets-response/2",
                    "prompt": "Answer:",
                    "location": "sidebar",
                    "type": "radio",
                    "options": [
                        "Yes",
                        "No"
                    ]
                }
            ]
        },
        "second-question-set": {
            "type": "questionnaire",
            "response": [
                {
                    "id": "q3-satisfaction",
                    "prompt": "Rate your satisfaction with this survey from 1 (not enjoyable) to 5 (very enjoyable).",
                    "required": true,
                    "location": "aboveStimulus",
                    "type": "likert",
                    "leftLabel": "Not Enjoyable",
                    "rightLabel": "Very Enjoyable",
                    "numItems": 5
                }
            ]
        }
    },
    "sequence": {
        "order": "fixed",
        "components": [
            "introduction",
            "first-question-set",
            "message-obscured-stimulus",
            "message-unobscured-stimulus",
            "second-question-set"
        ]
    }
}